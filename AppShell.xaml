<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="FantasyFootballMAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:FantasyFootballMAUI"
    Shell.FlyoutBehavior="Flyout"
    FlyoutBackgroundColor="#0d0000"
    BackgroundColor="#6588A6" >

    <ShellContent
        x:Name="WelcomePage"
        Title="Welcome"
        ContentTemplate="{DataTemplate local:OpeningPage}"
        Route="OpeningPage"/>

    <ShellContent
        x:Name="SignInPage"
        Title="Sign In"
        ContentTemplate="{DataTemplate local:LoginPage}"
        Route="LoginPage"/>

    <ShellContent
        x:Name="SignUpPage"
        Title="Sign Up"
        ContentTemplate="{DataTemplate local:RegisterPage}"
        Route="RegisterPage"/>

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:HomePage}"
        Route="HomePage"/>



