<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FantasyFootballMAUI.OpeningPage"
              BackgroundColor="#D9d5d2"
             Title="Welcome : Fantasy Football">

    <Grid x:Name="LoginGrid" ColumnDefinitions=".05*,.425*, .25*,.25*,.425*,.05*" RowDefinitions=".8*,*">
        <Grid Grid.Column="2" Grid.ColumnSpan="2" Grid.RowSpan="2" RowDefinitions=".2*,.2*,.2*,.2*,.2*" HorizontalOptions="Center" ZIndex="5">
            <BoxView Color="#0d0000" Grid.Column="0" Grid.Row="0" WidthRequest="25" HeightRequest="100" Rotation="110" Grid.ColumnSpan="1" CornerRadius="10,10,10,10"/>
            <BoxView Color="#0d0000" Grid.Column="0" Grid.Row="1" WidthRequest="25" HeightRequest="100" Rotation="110" Grid.ColumnSpan="1" CornerRadius="10,10,10,10"/>
            <BoxView Color="#0d0000" Grid.Column="0" Grid.Row="2" WidthRequest="25" HeightRequest="100" Rotation="110" Grid.ColumnSpan="1" CornerRadius="10,10,10,10"/>
            <BoxView Color="#0d0000" Grid.Column="0" Grid.Row="3" WidthRequest="25" HeightRequest="100" Rotation="110" Grid.ColumnSpan="1" CornerRadius="10,10,10,10"/>
            <BoxView Color="#0d0000" Grid.Column="0" Grid.Row="4" WidthRequest="25" HeightRequest="100" Rotation="110" Grid.ColumnSpan="1" CornerRadius="10,10,10,10"/>
        </Grid>

        <BoxView Color="#0d0000" Grid.Column="2" Grid.Row="0" Grid.ColumnSpan="1" Grid.RowSpan="5" WidthRequest="15" HorizontalOptions="End" Margin="0,0,2,0" ZIndex="5" CornerRadius="5,5,5,5" />
        <BoxView Color="#0d0000" Grid.Column="3" Grid.Row="0" Grid.ColumnSpan="1" Grid.RowSpan="5" WidthRequest="15" HorizontalOptions="Start" Margin="2,0,0,0" ZIndex="5" CornerRadius="5,5,5,5"/>
        <!--<Grid Grid.Column="2" Grid.ColumnSpan="1" Grid.RowSpan="2" Grid.Row="0" ColumnDefinitions=".45*,.1*,.45*" RowDefinitions=".2*,.2*,.2*,.2*,.2*" ZIndex="5" HorizontalOptions="Start">
            <BoxView Color="#0d0000" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="1" Grid.RowSpan="5" WidthRequest="15" HorizontalOptions="End"/>
            --><!--<BoxView Color="#0d0000" Grid.Column="2" Grid.RowSpan="5" Grid.ColumnSpan="1" WidthRequest="15" HorizontalOptions="Start"/>--><!--
        </Grid>-->

        <BoxView Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="0" Grid.RowSpan="2" Color="#26658C" Opacity=".1" CornerRadius="50, 0, 0, 0"/>
        <BoxView Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="0" Grid.RowSpan="2" Color="#023e73" Opacity=".1" CornerRadius="50, 0, 0, 0"/>
        <BoxView Grid.Column="3" Grid.ColumnSpan="2" Grid.Row="0" Grid.RowSpan="2" Color="#6588a6" Opacity="1" CornerRadius="0, 50, 0, 0"/>

        <ImageButton Source="signin.png" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" VerticalOptions="End" WidthRequest="75" HeightRequest="75"/>
        <ImageButton Source="signup.png" Grid.Row="0" Grid.Column="3" Grid.ColumnSpan="2" VerticalOptions="End" WidthRequest="75" HeightRequest="75"/>

        <Button 
                        x:Name="LoginBtn"
                        Text="SIGN IN"
                        SemanticProperties.Hint="Navigates to login page"
                        Clicked="OnLoginBtnClicked"
                        BackgroundColor="Transparent"
                        TextColor="#0d0000"
                        CornerRadius="50"
                        FontSize="32"
                        Grid.Column="1"
                        Grid.RowSpan="2"
                        FontAttributes="Bold"
                        BorderColor="Transparent"
                        HorizontalOptions="FillAndExpand"
                        Grid.ColumnSpan="2" />

        <Button
                        x:Name="RegisterBtn"
                        Text="SIGN UP"
                        SemanticProperties.Hint="Navigates to register page"
                        Clicked="OnRegisterBtnClicked"
                        BackgroundColor="Transparent"
                        BorderColor="Transparent"
                        TextColor="#0d0000"
                        FontSize="32"
                        Grid.Column="3"
                        Grid.RowSpan="2"
                        CornerRadius="50"
                        FontAttributes="Bold"
                        HorizontalOptions="FillAndExpand" 
                        Grid.ColumnSpan="2"/>
    </Grid>
</ContentPage>