<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FantasyFootballMAUI.HomePage"
             BackgroundColor="#D9D5D2"
             Title="Home"
             xmlns:Views="clr-namespace:FantasyFootballMAUI"
             x:Name="homePage">

    <Grid x:Name="HomeGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width=".05*"/>
            <ColumnDefinition Width=".9*"/>
            <ColumnDefinition Width=".05*"/>
        </Grid.ColumnDefinitions>

        <Label x:Name="HomeLabel" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" FontSize="14" FontAttributes="Bold" TextColor="#26658C"/>
        <BoxView Grid.Column="0" Grid.Row="1" Color="#26658C" Opacity=".1" ZIndex="2"/>
        
        <Grid Grid.Column="1" Grid.Row="1" Grid.RowSpan="1" ZIndex="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width=".34*"/>
                <ColumnDefinition Width=".66*"/>
            </Grid.ColumnDefinitions>

            <Label
                Text="Home"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="28"
                TextDecorations="Underline"
                FontAttributes="Bold"
                TextColor="#26658C"
                FontAutoScalingEnabled="True"
                HorizontalOptions="FillAndExpand"
                HorizontalTextAlignment="End"
                VerticalTextAlignment="Center"
                Margin="5,0,2.5,0"
                Grid.Column="0"
                Grid.Row="0">
            </Label>

            <CollectionView x:Name="LeaguesBelongedToView">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="10" RowDefinitions="Auto,Auto" ColumnDefinitions="Auto, Auto, Auto, Auto, Auto, Auto">
                            <Label Text="Id: " TextColor="#023E73" FontAttributes="Bold" Grid.Column="0" Grid.Row="0"/>
                            <Label Text="{Binding LeagueId}" TextColor="#023E73" FontAttributes="Bold" Grid.Column="1" Grid.Row="0"/>
                            <Label Text="League Name: " TextColor="#023E73" FontAttributes="Bold" Grid.Column="2" Grid.Row="0"/>
                            <Label Text="{Binding LeagueName}" TextColor="#023E73" FontAttributes="Bold" Grid.Column="3" Grid.Row="0"/>
                            <Label Text="Max Teams: " TextColor="#023E73" FontAttributes="Bold" Grid.Column="4" Grid.Row="0"/>
                            <Label Text="{Binding MaxTeams}" TextColor="#023E73" FontAttributes="Bold" Grid.Column="5" Grid.Row="0"/>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>
    </Grid>
    
</ContentPage>