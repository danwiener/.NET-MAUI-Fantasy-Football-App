            <CollectionView x:Name="LeaguesBelongedToCollectionView" Grid.Column="0" Grid.Row="1" WidthRequest="380" HorizontalOptions="StartAndExpand" SelectionMode="Multiple" SelectionChanged="LeaguesBelongedToCollectionView_SelectionChanged" ZIndex="5" EmptyView="No Data Available">
                    <CollectionView.ItemsLayout>
                        <GridItemsLayout Orientation="Vertical" Span="1"/>
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="44"/>
                                        <RowDefinition Height="44"/>
                                        <RowDefinition Height="44"/>
                                        <RowDefinition Height="44"/>
                                        <RowDefinition Height="44"/>
                                        <RowDefinition Height="44"/>
                                        <RowDefinition Height="44"/>
                                        <RowDefinition Height="44"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="70"/>
                                        <ColumnDefinition Width="140"/>
                                        <ColumnDefinition Width="150"/>
                                    </Grid.ColumnDefinitions>

                            <!--League Info Blue Banner-->

                            <BoxView Grid.Column="0" Grid.Row="0" Grid.RowSpan="1" Grid.ColumnSpan="3" Color="White" Opacity=".9" CornerRadius="10, 0, 0, 0" ZIndex="9">
                            </BoxView>

                            <!--Grey Banner-->
                            <BoxView Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1" Grid.RowSpan="3" Color="White" Opacity=".7" ZIndex="9"/>
                            <!--Creator Info Blue banner-->
                            <BoxView Grid.Column="0" Grid.Row="4" Grid.RowSpan="1" Grid.ColumnSpan="3" Color="White" Opacity=".9" CornerRadius="0, 0, 0, 0" ZIndex="9">
                            </BoxView>
                            <BoxView Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="5" Grid.RowSpan="2" Color="White" Opacity=".7" ZIndex="9"/>

                            <BoxView Grid.Column="0" Grid.Row="7" Grid.RowSpan="1" Grid.ColumnSpan="3" Color="White" Opacity=".7" CornerRadius="0,0,10,0">
                                <BoxView.Shadow>
                                    <Shadow Brush="#0d0000" Offset="20,20" Radius="10" Opacity="0.8">
                                    </Shadow>
                                </BoxView.Shadow>
                            </BoxView>
                            <BoxView Grid.Column="0" Grid.Row="7" Grid.RowSpan="1" Grid.ColumnSpan="3" Color="#0D0000" Opacity=".7" CornerRadius="0,0,10,0">
                                <BoxView.Shadow>
                                    <Shadow Brush="#0d0000" Offset="20,20" Radius="20" Opacity="0.8">
                                    </Shadow>
                                </BoxView.Shadow>
                            </BoxView>
                            <Grid Grid.Row="0" Grid.RowSpan="8" Grid.Column="0" Grid.ColumnSpan="3" HorizontalOptions="Center" ColumnDefinitions=".1*,.15*, .25*,.25*,.15*,.1*" RowDefinitions=".1*,.8*,.1*">
                                <Grid Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="1" RowDefinitions=".2*,.2*,.2*,.2*,.2*"  HorizontalOptions="Center" ZIndex="8" Rotation="90">
                                    <BoxView Color="#D9d5d2" Grid.Column="0" Grid.Row="0" WidthRequest="19" HeightRequest="76" Rotation="95" Grid.ColumnSpan="1" CornerRadius="10,10,10,10" Opacity=".5"/>
                                    <BoxView Color="#D9d5d2" Grid.Column="0" Grid.Row="1" WidthRequest="19" HeightRequest="76" Rotation="95" Grid.ColumnSpan="1" CornerRadius="10,10,10,10" Opacity=".5" />
                                    <BoxView Color="#D9d5d2" Grid.Column="0" Grid.Row="2" WidthRequest="19" HeightRequest="76" Rotation="95" Grid.ColumnSpan="1" CornerRadius="10,10,10,10" Opacity=".5"/>
                                    <BoxView Color="#D9d5d2" Grid.Column="0" Grid.Row="3" WidthRequest="19" HeightRequest="76" Rotation="95" Grid.ColumnSpan="1" CornerRadius="10,10,10,10" Opacity=".5" />
                                    <BoxView Color="#D9d5d2" Grid.Column="0" Grid.Row="4" WidthRequest="19" HeightRequest="76" Rotation="95" Grid.ColumnSpan="1" CornerRadius="10,10,10,10" Opacity=".5"/>
                                </Grid>

                                <Grid Grid.Row="1" Grid.RowSpan="1" Grid.Column="1" Grid.ColumnSpan="4" ColumnDefinitions=".10*,.8*,.10*"  RowDefinitions=".5*,.5*" ZIndex="8">
                                    <BoxView Color="#D9d5d2" Grid.Row="0" Grid.RowSpan="1" Grid.Column="1" HeightRequest="11.4"  Margin="0,1,0,1" ZIndex="7" CornerRadius="5,5,5,5" VerticalOptions="EndAndExpand"   Opacity="0.5"/>
                                    <BoxView Color="#D9d5d2" Grid.Row="1" Grid.RowSpan="1" Grid.Column="1" HeightRequest="11.4"  Margin="0,1,0,1" ZIndex="7" CornerRadius="5,5,5,5" VerticalOptions="StartAndExpand" Opacity="0.5"/>

                                </Grid>

                                <Grid Grid.Row="1" Grid.RowSpan="1" Grid.Column="1" Grid.ColumnSpan="4" RowDefinitions=".5*,.5*" WidthRequest="274" ZIndex="7">
                                    <BoxView Grid.Column="1" Grid.ColumnSpan="4" Grid.Row="0" Grid.RowSpan="1" Color="#26658C" Opacity=".15" CornerRadius="300, 300, 0, 0" RotationX="35" HeightRequest="119" VerticalOptions="EndAndExpand">
                                    </BoxView>
                                    <BoxView Grid.Column="1" Grid.ColumnSpan="4" Grid.Row="0" Grid.RowSpan="1" Color="#023e73" Opacity=".15" CornerRadius="300, 300, 0, 0" RotationX="35" HeightRequest="119" VerticalOptions="EndAndExpand">
                                        <BoxView.Shadow>
                                            <Shadow Brush="#26658c" Offset="20,20" Radius="40" Opacity="0.8"/>
                                        </BoxView.Shadow>
                                    </BoxView>
                                    <BoxView Grid.Column="3" Grid.ColumnSpan="2" Grid.Row="1" Grid.RowSpan="1" Color="#6588a6" Opacity=".5" CornerRadius="0,0, 300, 300" RotationX="-35" HeightRequest="119" VerticalOptions="StartAndExpand">
                                        <BoxView.Shadow>
                                            <Shadow Brush="#0d0000" Offset="20,20" Radius="40" Opacity="0.8">

                                            </Shadow>
                                        </BoxView.Shadow>
                                    </BoxView>
                                </Grid>
                                <Ellipse Fill="#825736" Stroke="#825736" StrokeThickness="4" HeightRequest="204.16" WidthRequest="350" Grid.Column="1" Grid.ColumnSpan="4" HorizontalOptions="Center" Grid.Row="1" Grid.RowSpan="1" ZIndex="6" Opacity=".25"/>

                            </Grid>

                            
                            <Image Grid.Row="3" Grid.RowSpan="2" Grid.Column="0" HeightRequest="60" WidthRequest="60" Source="{Binding Image}"/>
                                    <!--<BoxView Color="#D9D5D2" Opacity=".4" Grid.Column="1" Grid.Row="0" ZIndex="8"/>-->
                            <Label Grid.Column="1" Grid.Row="0" Text="League Info" LineBreakMode="TailTruncation" TextColor="#0d0000" ZIndex="10" FontAttributes="Bold" VerticalOptions="Center" VerticalTextAlignment="Center" />
                            <Label Grid.Column="1" Grid.Row="1" Margin="5, 0, 2.5, 0" Text="League Name" LineBreakMode="TailTruncation" TextColor="#090000" VerticalOptions="Center" HorizontalTextAlignment="End" ZIndex="10"/>
                            <Frame HeightRequest="38" BorderColor="Transparent" HasShadow="False" VerticalOptions="Center" HorizontalOptions="FillAndExpand" Margin="2.5,0,0,0" Grid.Column="2" Grid.Row="1" BackgroundColor="White" Padding="10">
                                <Label Grid.Column="2" Grid.Row="1" Text="{Binding LeagueName}" LineBreakMode="TailTruncation" TextColor="#023E73" VerticalOptions="Center"/>
                            </Frame>

                            <Label Grid.Column="1" Grid.Row="2" Margin="5, 0, 2.5, 0" Text="Max Teams" LineBreakMode="TailTruncation" TextColor="#090000" VerticalOptions="Center" HorizontalTextAlignment="End" ZIndex="10"/>
                            <Frame HeightRequest="38" BorderColor="Transparent" HasShadow="False" VerticalOptions="Center" HorizontalOptions="FillAndExpand" Margin="2.5,0,0,0" Grid.Column="2" Grid.Row="2" BackgroundColor="White" Padding="10">
                                <Label Grid.Column="2" Grid.Row="2" Text="{Binding MaxTeams}" LineBreakMode="TailTruncation" TextColor="#023E73" VerticalOptions="Center"/>
                            </Frame>

                            <Label Grid.Column="1" Grid.Row="3" Margin="5, 0, 2.5, 0" Text=" Current # Teams" LineBreakMode="TailTruncation" TextColor="#090000" VerticalOptions="Center" HorizontalTextAlignment="End" ZIndex="10"/>

                            <Frame HeightRequest="38" BorderColor="Transparent" HasShadow="False" VerticalOptions="Center" HorizontalOptions="FillAndExpand" Margin="2.5,0,0,0" Grid.Column="2" Grid.Row="3" BackgroundColor="White" Padding="10">
                                <Label Grid.Column="2" Grid.Row="3" Text="" LineBreakMode="TailTruncation" TextColor="#D9D5D2" VerticalOptions="Center"/>
                            </Frame>

                            <Label Grid.Column="1" Grid.Row="4" Text="Creator Info" LineBreakMode="TailTruncation" TextColor="#0d0000" FontAttributes="Bold" VerticalOptions="Center" VerticalTextAlignment="Center" ZIndex="10"/>
                            <Label Grid.Column="1" Grid.Row="5" Margin="5, 0, 2.5, 0" Text="Creator Name" LineBreakMode="TailTruncation" TextColor="#090000" VerticalOptions="Center" HorizontalTextAlignment="End" ZIndex="10"/>

                            <Frame HeightRequest="38" BorderColor="Transparent" HasShadow="False" VerticalOptions="Center" HorizontalOptions="FillAndExpand" Margin="2.5,0,0,0" Grid.Column="2" Grid.Row="5" BackgroundColor="White" Padding="10">
                                <Label Grid.Column="2" Grid.Row="5" Text="{Binding CreatorName}" LineBreakMode="TailTruncation" TextColor="#023E73" VerticalOptions="Center"/>
                            </Frame>
                            <Label Grid.Column="1" Grid.Row="6" Margin="5, 0, 2.5, 0" Text="Creator Username" LineBreakMode="TailTruncation" TextColor="#090000" VerticalOptions="Center" HorizontalTextAlignment="End" ZIndex="10"/>

                            <Frame HeightRequest="38" BorderColor="Transparent" HasShadow="False" VerticalOptions="Center" HorizontalOptions="FillAndExpand" Margin="2.5,0,0,0" Grid.Column="2" Grid.Row="6" BackgroundColor="White" Padding="10">
                                <Label Grid.Column="2" Grid.Row="6" Text="{Binding CreatorUsername}" LineBreakMode="TailTruncation" TextColor="#023E73" VerticalOptions="Center"/>
                            </Frame>
                            <Label Grid.Column="1" Grid.Row="7" Margin="5, 0, 2.5, 0" Text="I Am Commissioner" LineBreakMode="TailTruncation" TextColor="#D9D5D2" VerticalOptions="Center" HorizontalTextAlignment="End"/>
                            <CheckBox Grid.Column="2" Grid.Row="7" BackgroundColor="#0d0000" Color="White" IsChecked="{Binding CreatedByCurrentUser}" VerticalOptions="Center" ZIndex="9"/>
                        </Grid>

                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

