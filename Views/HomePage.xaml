        </Grid>


        <Grid Grid.Column="1" Grid.Row="2" Grid.RowSpan="1" ZIndex="1" x:Name="TeamsBelongedToGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width=".5*"/>
                <ColumnDefinition Width=".5*"/>
            </Grid.ColumnDefinitions>

            <CollectionView x:Name="TeamsBelongedToCollectionView" Grid.Column="1" Grid.Row="0" WidthRequest="380" HorizontalOptions="StartAndExpand" SelectionMode="Single" SelectionChanged="TeamsBelongedToCollectionView_SelectionChanged" ZIndex="5" VerticalOptions="Center" EmptyView="No teams belonged to. Please create one at this time.">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical" Span="1"/>
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="10" VerticalOptions="Center">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="44"/>
                                <RowDefinition Height="44"/>
                                <RowDefinition Height="44"/>
                                <RowDefinition Height="44"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0"/>
                                <ColumnDefinition Width="175"/>
                                <ColumnDefinition Width="185"/>
                            </Grid.ColumnDefinitions>


                            <BoxView Color="#ffffff" Grid.Row="0" Grid.RowSpan="4" Grid.Column="0" Grid.ColumnSpan="3">
                                <BoxView.Shadow>
                                    <Shadow Brush="black" Offset="0,10" Radius="20" Opacity="0.8"/>
                                </BoxView.Shadow>
                            </BoxView>

                            <HorizontalStackLayout Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" HorizontalOptions="CenterAndExpand">
                                <Label Text="Team Name" TextColor="Black" VerticalOptions="CenterAndExpand" FontSize="18"/>
                                <Label 
                                Text="{Binding TeamName}"
                                TextColor="Black"
                                Margin="10,0,0,0"
                                FontSize="18"
                                FontAttributes="Bold"
                                TextDecorations="Underline"
                                HorizontalOptions="FillAndExpand"
                                VerticalOptions="CenterAndExpand"
                                Grid.ColumnSpan="1"
                                ZIndex="7"/>
                            </HorizontalStackLayout>



                            <HorizontalStackLayout Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" HorizontalOptions="CenterAndExpand">
                                <Label Text="League" TextColor="Black" VerticalOptions="CenterAndExpand" FontSize="18"/>
                                <Label 
                                Text="{Binding LeagueName}"
                                TextColor="Black"
                                Margin="10,0,0,0"
                                FontSize="18"
                                FontAttributes="Bold"
                                TextDecorations="Underline"
                                HorizontalOptions="FillAndExpand"
                                VerticalOptions="CenterAndExpand"
                                Grid.ColumnSpan="1"
                                ZIndex="7"/>
                            </HorizontalStackLayout>

                            <HorizontalStackLayout Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" HorizontalOptions="CenterAndExpand">
                                <Label Text="Created On" TextColor="Black" VerticalOptions="CenterAndExpand" FontSize="18"/>
                                <Label 
                                Text="{Binding CreatedOnDate}"
                                TextColor="Black"
                                Margin="10,0,0,0"
                                FontSize="18"
                                FontAttributes="Bold"
                                TextDecorations="Underline"
                                HorizontalOptions="FillAndExpand"
                                VerticalOptions="CenterAndExpand"
                                Grid.ColumnSpan="1"
                                ZIndex="7"/>
                            </HorizontalStackLayout>



                            <!--<Image x:Name="LeagueIcon" Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" VerticalOptions="Center" HorizontalOptions="Center" HeightRequest="60" WidthRequest="60" Source="{Binding ImageSource}"/>-->
                            
                            <HorizontalStackLayout Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" HorizontalOptions="CenterAndExpand">
                                <Label Margin="5, 0, 2.5, 0" Text="My Team" LineBreakMode="TailTruncation" TextColor="Black" VerticalOptions="Center" HorizontalTextAlignment="End" FontSize="16" FontAttributes="Italic"/>
                                <CheckBox BackgroundColor="#6588a6" Color="#6588a6" IsEnabled="False" IsChecked="{Binding CreatedByCurrentUser}" VerticalOptions="Center" ZIndex="9"/>
                            </HorizontalStackLayout>
                        </Grid>

                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>


        </Grid>

        <Grid Grid.Column="1" Grid.Row="3" Grid.RowSpan="1" ZIndex="1" x:Name="TeamsButtonsGrid" ColumnDefinitions=".5*,.5*" Margin="0,5,0,0">
            <HorizontalStackLayout Grid.Column="1" VerticalOptions="Center" Grid.ColumnSpan="1" HorizontalOptions="Start" Margin="7.5,0,0,0">
                <Button Text="VIEW TEAM" CornerRadius="0" BorderColor="#ffffff" BorderWidth="1" x:Name="ViewTeamBtn" Clicked="OnViewTeamBtnClicked" HeightRequest="44" WidthRequest="90" VerticalOptions="Center" HorizontalOptions="End" FontAutoScalingEnabled="True" FontSize="8" BackgroundColor="#e6e6e6" TextColor="Black" Margin="0, 0, 0, 0"/>
                <Button Text="GO BACK" CornerRadius="0" BorderColor="#ffffff" BorderWidth="1" IsVisible="false" x:Name="GoBackTeamBtn" Clicked="OnGoBackTeamClicked" HeightRequest="44" WidthRequest="90" VerticalOptions="Center" HorizontalOptions="End" FontAutoScalingEnabled="True" FontSize="8" BackgroundColor="#e6e6e6" TextColor="Black" Margin="0, 0, 0, 0"/>

                <Button Text="DELETE TEAM" CornerRadius="0" BorderColor="#ffffff" BorderWidth="1" x:Name="DeleteTeamBtn" Padding="-5" Clicked="OnDeleteTeamClicked" HeightRequest="44" WidthRequest="90" VerticalOptions="Center" HorizontalOptions="Center" FontAutoScalingEnabled="True" FontSize="8" BackgroundColor="#e6e6e6" TextColor="Black" Margin="2.5, 0, 0, 0"/>
                <Button Text="ENTER" CornerRadius="0" BorderColor="#ffffff" BorderWidth="1" x:Name="EnterTeamBtn" IsVisible="false" Padding="-5" Clicked="OnEnterTeamClicked" HeightRequest="44" WidthRequest="90" VerticalOptions="Center" HorizontalOptions="Center" FontAutoScalingEnabled="True" FontSize="8" BackgroundColor="#e6e6e6" TextColor="Black" Margin="2.5, 0, 0, 0"/>

            </HorizontalStackLayout>
        </Grid>

        <Grid Grid.Column="1" Grid.Row="2" Grid.RowSpan="1" ZIndex="1" x:Name="TeamsInLeagueGrid" IsVisible="false">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width=".5*"/>
                <ColumnDefinition Width=".5*"/>
            </Grid.ColumnDefinitions>

            <CollectionView x:Name="TeamsInLeagueCollectionView" IsEnabled="False" Grid.Column="1" Grid.Row="0" WidthRequest="380" HorizontalOptions="StartAndExpand" SelectionMode="Single" SelectionChanged="TeamsInLeague_SelectionChanged" ZIndex="5" VerticalOptions="Center" EmptyView="No teams in league. Please create a team at this time.">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical" Span="1"/>
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="10" VerticalOptions="Center">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="22"/>
                                <RowDefinition Height="22"/>
                                <RowDefinition Height="22"/>
                                <RowDefinition Height="22"/>
                                <RowDefinition Height="22"/>
                                <RowDefinition Height="22"/>
                                <RowDefinition Height="22"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0"/>
                                <ColumnDefinition Width="175"/>
                                <ColumnDefinition Width="185"/>
                            </Grid.ColumnDefinitions>


                            <BoxView Color="#ffffff" Grid.Row="0" Grid.RowSpan="7" Grid.Column="0" Grid.ColumnSpan="3" >
                                <BoxView.Shadow>
                                    <Shadow Brush="black" Offset="0,10" Radius="20" Opacity="0.8"/>
                                </BoxView.Shadow>
                            </BoxView>

                            <HorizontalStackLayout Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" HorizontalOptions="CenterAndExpand">
                                <Label Text="Team Name" TextColor="Black" VerticalOptions="CenterAndExpand" FontSize="18"/>
                                <Label 
                                Text="{Binding TeamName}"
                                TextColor="Black"
                                Margin="10,0,0,0"
                                FontSize="18"
                                FontAttributes="Bold"
                                TextDecorations="Underline"
                                HorizontalOptions="FillAndExpand"
                                VerticalOptions="CenterAndExpand"
                                Grid.ColumnSpan="1"
                                ZIndex="7"/>
                            </HorizontalStackLayout>



                            <HorizontalStackLayout Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" HorizontalOptions="CenterAndExpand">
                                <Label Text="League" TextColor="Black" VerticalOptions="CenterAndExpand" FontSize="18"/>
                                <Label 
                                Text="{Binding TeamName}"
                                TextColor="Black"
                                Margin="10,0,0,0"
                                FontSize="18"
                                FontAttributes="Bold"
                                TextDecorations="Underline"
                                HorizontalOptions="FillAndExpand"
                                VerticalOptions="CenterAndExpand"
                                Grid.ColumnSpan="1"
                                ZIndex="7"/>
                            </HorizontalStackLayout>

                            <HorizontalStackLayout Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" HorizontalOptions="CenterAndExpand">
                                <Label Text="Created On" TextColor="Black" VerticalOptions="CenterAndExpand" FontSize="18"/>
                                <Label 
                                Text="{Binding CreatedOnDate}"
                                TextColor="Black"
                                Margin="10,0,0,0"
                                FontSize="18"
                                FontAttributes="Bold"
                                TextDecorations="Underline"
                                HorizontalOptions="FillAndExpand"
                                VerticalOptions="CenterAndExpand"
                                Grid.ColumnSpan="1"
                                ZIndex="7"/>
