<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FantasyFootballMAUI.HomePage"
             BackgroundColor="#D9D5D2"
             Title="Home"
             xmlns:Views="clr-namespace:FantasyFootballMAUI"
             x:Name="homePage">
    <ContentPage.Resources>
        <Style TargetType="ScrollView">
            <Setter Property="VisualStateManager.VisualStateGroups">
                <VisualStateGroupList>
                    <VisualStateGroup x:Name="CommonStates">
                        <VisualState x:Name="Normal"/>
                        <VisualState x:Name="Selected">
                            <VisualState.Setters>
                                <Setter Property="BackgroundColor"
                                        Value="#6588a6"/>
                            </VisualState.Setters>
                        </VisualState>
                    </VisualStateGroup>
                </VisualStateGroupList>
            </Setter>
        </Style>
    </ContentPage.Resources>

    <Grid x:Name="HomeGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width=".05*"/>
            <ColumnDefinition Width=".9*"/>
            <ColumnDefinition Width=".05*"/>
        </Grid.ColumnDefinitions>

        <Label x:Name="UsernameLabel" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" HorizontalOptions="Start" VerticalOptions="Center" TextColor="#0d0000"/>


        <Label x:Name="HomeLabel" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" FontSize="14" FontAttributes="Bold" TextColor="#26658C"/>
        <BoxView Grid.Column="0" Grid.Row="1" Color="#26658C" Opacity=".1" ZIndex="2"/>


        <Grid Grid.Column="1" Grid.Row="1" Grid.RowSpan="1" ZIndex="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width=".5*"/>
                <ColumnDefinition Width=".5*"/>
            </Grid.ColumnDefinitions>

            <BoxView Grid.Column="0" Grid.Row="0" Grid.RowSpan="1" Grid.ColumnSpan="2" Color="#26658C" Opacity=".1" CornerRadius="10, 0, 0, 0">
                <BoxView.Shadow>
                    <Shadow Brush="#6588a6" Offset="20,20" Radius="10" Opacity="0.8">
                    </Shadow>
                </BoxView.Shadow>
            </BoxView>
            <BoxView Grid.Column="0" Grid.Row="0" Grid.RowSpan="1" Grid.ColumnSpan="2" Color="#023e73" Opacity=".1" CornerRadius="10, 0, 0, 0">
                <BoxView.Shadow>
                    <Shadow Brush="#6588a6" Offset="20,20" Radius="10" Opacity="0.8">
                    </Shadow>
                </BoxView.Shadow>
            </BoxView>

            <Label
                Text="Leagues Belonged To"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="22"
                TextDecorations="Underline"
                FontAttributes="Bold"
                TextColor="#26658C"
                FontAutoScalingEnabled="True"
                HorizontalOptions="FillAndExpand"
                HorizontalTextAlignment="Center"
                VerticalTextAlignment="Center"
                Margin="5,0,2.5,0"
                Grid.Column="0"
                Grid.Row="0">
            </Label>

            <Label
                Text="User Teams"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="22"
                TextDecorations="Underline"
                FontAttributes="Bold"
                TextColor="#26658C"
                FontAutoScalingEnabled="True"
                HorizontalOptions="FillAndExpand"
                HorizontalTextAlignment="Center"
                VerticalTextAlignment="Center"
                Margin="5,0,2.5,0"
                Grid.Column="1"
                Grid.Row="0">
            </Label>

            <!--<Grid Grid.Column="0" Grid.ColumnSpan="2" ColumnDefinitions=".5*,.5*" Grid.Row="1">
                <BoxView Grid.Column="0" Grid.ColumnSpan="1" Grid.Row="0" Color="#26658C" Opacity=".1"/>
                <BoxView Grid.Column="0" Grid.ColumnSpan="1" Grid.Row="0" Color="#0D0000" Opacity=".1"/>
            </Grid>
            <Grid Grid.Column="0" Grid.ColumnSpan="2" ColumnDefinitions=".5*,.5*" Grid.Row="1">
                <BoxView Grid.Column="1" Grid.ColumnSpan="1" Grid.Row="0" Color="#D9D5D2" Opacity=".1"/>
                <BoxView Grid.Column="1" Grid.ColumnSpan="1" Grid.Row="0" Color="#26658C" Opacity=".3"/>
            </Grid>-->
            
            
