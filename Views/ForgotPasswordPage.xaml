<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FantasyFootballMAUI.ForgotPasswordPage"
             BackgroundColor="White"
             Title="">

    <Grid x:Name="ForgotPasswordGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height=".1*"/>
            <RowDefinition Height=".8*"/>
            <RowDefinition Height=".1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width=".05*"/>
            <ColumnDefinition Width=".9*"/>
            <ColumnDefinition Width=".05*"/>
        </Grid.ColumnDefinitions>


        <Grid Grid.RowSpan="3" Grid.ColumnSpan="3" RowDefinitions=".5*,.5*" ZIndex="0">
            <BoxView Color="Black" Grid.Row="1"/>
        </Grid>


        <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Grid.RowSpan="3" RowDefinitions=".5*,.5*">
            <Label x:Name="TitleLabel" Text="Forgot Password" FontSize="32" FontAttributes="Bold" FontFamily="PT" FontAutoScalingEnabled="True" TextColor="#737373" Grid.Row="0" HorizontalOptions="Center" VerticalOptions="Center" Scale="6">
                <Label.Shadow>
                    <Shadow Brush="#737373" Offset="0,20" Radius="20" Opacity="1.2"/>
                </Label.Shadow>
            </Label>
        </Grid>

        <Grid Grid.Column="1" Grid.Row="1" Grid.RowSpan="1" ZIndex="1" VerticalOptions="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="44"/>
                <RowDefinition Height="44"/>
                <RowDefinition Height="44"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width=".17*"/>
                <ColumnDefinition Width=".66*"/>
                <ColumnDefinition Width=".17*"/>
            </Grid.ColumnDefinitions>


            <Frame HeightRequest="38" BorderColor="Transparent" HasShadow="False" VerticalOptions="Center" HorizontalOptions="FillAndExpand" Margin="2.5,0,0,0" Grid.Column="1" Grid.Row="0" BackgroundColor="White" Padding="10">
                <Grid ColumnDefinitions="25,*" RowDefinitions="*">
                    <Image Source="email.png" HeightRequest="25" WidthRequest="25" Grid.Column="0"/>
                    <Entry x:Name="EmailEntry" HeightRequest="38" Grid.Row="0" BackgroundColor="#f2f2f2" TextColor="Black" Placeholder="Email Address" PlaceholderColor="Black"
                        MaxLength="32" VerticalTextAlignment="Center" ZIndex="5" Grid.Column="1"/>
                </Grid>
            </Frame>

            <Button 
                        x:Name="SendForgotEmailBtn"
                        Text="SEND RESET EMAIL"
                        SemanticProperties.Hint="Logs user in if login credentials are valid"
                        Clicked="OnSendForgotEmailBtn"
                        BackgroundColor="#a6a6a6"
                        TextColor="#6588a6"
                        FontSize="26"
                        FontAttributes="Bold"
                        HorizontalOptions="FillAndExpand" 
                        Grid.Row="1"
                        Grid.Column="1"/>


            <Grid Grid.Row="2" Grid.Column="1" RowDefinitions="*" ColumnDefinitions=".5*, .5*">
                <HorizontalStackLayout Spacing="10" Grid.Column="1" HorizontalOptions="StartAndExpand">
                    <Label Text="Know your password?" VerticalTextAlignment="Center" TextColor="White" FontSize="12"/>
                    <Button Text="GO BACK" FontSize="16" FontAttributes="Bold" TextColor="White" BackgroundColor="Transparent" VerticalOptions="Center" BorderColor="Transparent" BorderWidth="0" Margin="0,0,0,0" Clicked="OnGoBackButtonClicked" />
                </HorizontalStackLayout>
            </Grid>


            <BoxView Color="#f34f1c" Grid.Row="3"  Grid.RowSpan="2" Grid.Column="0" HorizontalOptions="CenterAndExpand"
               Margin="0, 88, 88, 0"
               HeightRequest="44"
               WidthRequest="44" CornerRadius="22" Opacity=".05" ZIndex="0">
            </BoxView>
            <BoxView Color="#7fbc00" Grid.Row="3"  Grid.RowSpan="2" Grid.Column="0" HorizontalOptions="CenterAndExpand"
               Margin="0, 66, 66, 0"
               HeightRequest="44"
               WidthRequest="44" CornerRadius="22" Opacity=".05" ZIndex="0">
            </BoxView>
            <BoxView Color="#01a6f0" Grid.Row="3"  Grid.RowSpan="2" Grid.Column="0" HorizontalOptions="CenterAndExpand"
               Margin="0, 44, 44, 0"
               HeightRequest="44"
               WidthRequest="44" CornerRadius="22" Opacity=".05" ZIndex="0">
            </BoxView>
            <BoxView Color="#ffba01" Grid.Row="3"  Grid.RowSpan="2" Grid.Column="0" HorizontalOptions="CenterAndExpand"
               Margin="0, 22, 22, 0"
               HeightRequest="44"
               WidthRequest="44" CornerRadius="22" Opacity=".05" ZIndex="0">
            </BoxView>

            <BoxView Color="#f34f1c" Grid.Row="3"  Grid.RowSpan="2" Grid.Column="0" HorizontalOptions="CenterAndExpand"
               Margin="0, -22, -11, 0"
               HeightRequest="88"
               WidthRequest="88" CornerRadius="44" Opacity=".05" ZIndex="0">
            </BoxView>
            <BoxView Color="#7fbc00" Grid.Row="3"  Grid.RowSpan="2" Grid.Column="0" HorizontalOptions="CenterAndExpand"
               Margin="0, -44, -24, 0"
               HeightRequest="88"
               WidthRequest="88" CornerRadius="44" Opacity=".05" ZIndex="0">
            </BoxView>
            <BoxView Color="#01a6f0" Grid.Row="3"  Grid.RowSpan="2" Grid.Column="0" HorizontalOptions="CenterAndExpand"
               Margin="0, -66, -41, 0"
               HeightRequest="88"
               WidthRequest="88" CornerRadius="44" Opacity=".05" ZIndex="0">
            </BoxView>
            <BoxView Color="#ffba01" Grid.Row="3"  Grid.RowSpan="2" Grid.Column="0" HorizontalOptions="CenterAndExpand"
               Margin="0, -88, -61, 0"
               HeightRequest="88"
               WidthRequest="88" CornerRadius="44" Opacity=".05" ZIndex="0">
            </BoxView>
            <BoxView Color="#f34f1c" Grid.Row="3"  Grid.RowSpan="2" Grid.Column="0" HorizontalOptions="CenterAndExpand"
               Margin="0, -110, -78, 0"
               HeightRequest="88"
               WidthRequest="88" CornerRadius="44" Opacity=".05" ZIndex="0">
            </BoxView>
            <BoxView Color="#7fbc00" Grid.Row="3"  Grid.RowSpan="2" Grid.Column="0" HorizontalOptions="CenterAndExpand"
               Margin="0, -132, -92, 0"
               HeightRequest="88"
               WidthRequest="88" CornerRadius="44" Opacity=".05" ZIndex="0">
            </BoxView>
            <BoxView Color="#01a6f0" Grid.Row="3"  Grid.RowSpan="2" Grid.Column="0" HorizontalOptions="CenterAndExpand"
               Margin="0, -154, -103, 0"
               HeightRequest="88"
               WidthRequest="88" CornerRadius="44" Opacity=".05" ZIndex="0">
            </BoxView>
            <BoxView Color="#ffba01" Grid.Row="3"  Grid.RowSpan="2" Grid.Column="0" HorizontalOptions="CenterAndExpand"
               Margin="0, -176, -117, 0"
               HeightRequest="88"
               WidthRequest="88" CornerRadius="44" Opacity=".05" ZIndex="0">
            </BoxView>


        </Grid>

        <BoxView Color="#eeeeee" Grid.Row="2" Grid.ColumnSpan="2" HorizontalOptions="StartAndExpand"
               Margin="62, 0, 0, 0"
               HeightRequest="250"
               WidthRequest="250" CornerRadius="125" ZIndex="0" Opacity=".1">
        </BoxView>
        <BoxView Color="#438696" Grid.Row="2" Grid.ColumnSpan="2" HorizontalOptions="StartAndExpand"
               Margin="125, -125, 0, 0"
               HeightRequest="250"
               WidthRequest="250" CornerRadius="125" ZIndex="0" Opacity=".1">
        </BoxView>
        <BoxView Color="#de6b28" Grid.Row="2" Grid.ColumnSpan="2" HorizontalOptions="StartAndExpand"
               Margin="62, -250, 0, 0"
               HeightRequest="250"
               WidthRequest="250" CornerRadius="125" ZIndex="0" Opacity=".1">
        </BoxView>
        <BoxView Color="#978d83" Grid.Row="2" Grid.ColumnSpan="2" HorizontalOptions="StartAndExpand"
               Margin="82, -350, 0, 0"
               HeightRequest="250"
               WidthRequest="250" CornerRadius="125" ZIndex="0" Opacity=".1">
        </BoxView>

    </Grid>
</ContentPage>
